<h1>New Book Orders</h1>
<form id ="create_new_order">
    {{! Select Member}}
    <div>
        <label for="member_id">Select Member:</label>
        <select name="member_id" id="member_id" required>
            <option value="" disabled selected>Select a Member</option>
            {{#each members}}
            <option value="{{this.member_id}}">
                {{this.first_name}} {{this.last_name}}
            </option>
            {{/each}}
        </select>
    </div>

    <div>
        {{! Order Dates }}
        <label for="order_date">Order Date:</label>
        <input type="date" name="order_date" id="order_date" required />
        <label for="due_date">Due Date:</label>
        <input type="date" name="due_date" id="due_date" required />
    </div>
    <div>
        {{! Books Section }}
        <h3>Books in Order</h3>
        <div id="books_selected">
            <div class="book_item">
                <label>Book:</label>
                <select name="book_id[]" class="book_select" required>
                    <option value="" disabled selected>Select a Book</option>
                    {{#each books}}
                    <option value="{{this.book_id}}">
                        {{this.title}} (Available: {{this.quantity}})
                    </option>
                    {{/each}}
                </select>

                <label>Quantity:</label>
                <input type="number" name="quantity[]" class="quantity_input" min="1" value="1" required />
              
                <button type="button" class="remove_book_btn" style="display:none;">Remove</button>
    </div>
        </div>

    <button type="button" id="add_book_btn">Add Another Book</button>
    <input type="submit" value="Create Order" />


</form>
<a href="/order-details">Back to Orders</a> {{! Takes you back to orders page }}


<script src="/js/bookorder-new.js"></script>
