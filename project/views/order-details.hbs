<h1>
<img src="/images/books (1).png" alt="Checked Out Books Icon" style="width:50px; height:auto;">
    Books Checked Out 
</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            <th>Book Title</th>
            <th>Quantity</th>
            <th>Checked Out To</th>
            
            <th></th>
         
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, first_name, last_name, homeworld and age }}
        {{#each orderdetail}}
        <tr>
 
            <td>{{this.book_title}}</td>
            <td>{{this.quantity}}</td>
            <td>{{this.member_name}}</td>

           
            {{! DELETE form }}
            <form id='delete_person_form'  method='POST' action='/book-order-delete'
                onsubmit="return confirm('Are you sure {{this.member_name}} wants to check in {{this.book_title}}?')">
              
                <input type='hidden' name='delete_book_order_id' value='{{this.book_order_id}}' />
                <td>
                    <button type='submit' id='change_button'>
                        Return Book
                    </button>
                   
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>
<br><br>
<button onclick="window.location.href='/bookorders-new';" id = 'add_button'>
    Check Out New Books
</button>
