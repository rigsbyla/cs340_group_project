<h1>
<img src="/images/student.png" alt="Members Icon" style="width:50px; height:auto;">
    Library Members
</h1>

<button onclick="window.location.href='/members-new';" id = 'add_button'>
    Add a New Member
</button> 
<br><br><br>
{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            <th>Member ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Fee Total</th>
            
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, first_name, last_name, homeworld and age }}
        {{#each people}}
        <tr>
            <td>{{this.member_id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.address}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone_number}}</td>
            <td>{{this.fee_total}}</td>

            {{! DELETE form }}
            <form id='delete_person_form'  method='POST' action='/members-delete'
                onsubmit="return confirm('Are you sure you want to delete {{this.first_name}} {{this.last_name}}?')">
              
                <input type='hidden' name='delete_member_id' value='{{this.member_id}}' />
                <input type='hidden' name='delete_member_name' value='{{this.first_name}} {{this.last_name}}' />
                <td>
                    
                    <button type='submit' id='delete_button'>
                        Delete
                    </button>
                   
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

<br><br>


<button onclick="window.location.href='/member-update';" id = 'change_button'>
    Update Member Information
</button>

