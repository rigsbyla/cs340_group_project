<h1>
<img src="/images/student.png" alt="Members Icon" style="width:50px; height:auto;">
    Library Members
</h1>
{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            <th>Member ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Fee Total</th>
            
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, first_name, last_name, homeworld and age }}
        {{#each people}}
        <tr>
            <td>{{this.member_id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.address}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone_number}}</td>
            <td>{{this.fee_total}}</td>

            {{! DELETE form }}
            <form id='delete_person_form' 
                onsubmit="return confirm('Are you sure you want to delete {{this.first_name}} {{this.last_name}}?')">
              
                <input type='hidden' name='delete_person_id' value='{{this.member_id}}' />
                <input type='hidden' name='delete_person_name' value='{{this.first_name}} {{this.last_name}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                   
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! New Member Button }}
<br><br>
<button onclick="window.location.href='/members-new';">
    Add a New Member
</button>

{{! UPDATE form }}
<h2>Update a Person</h2>
<form class='cuForm' id='update_person_form'>
    <label for='update_person_id'>Person to Update: </label>
    <select name='update_person_id' id='update_person_id' required>
        <option value='' disabled selected>Select a Person</option>
        {{#each people}}
        <option value='{{this.member_id}}' required>
            {{this.member_id}}
            -
            {{this.first_name}}
            {{this.last_name}}
        </option>
        {{/each}}
    </select>

   <label for='update_person_first_name'>First Name: </label>
    <input type='text' name='update_person_first_name' id='update_person_first_name' />

    <label for='update_person_last_name'>Last Name: </label>
    <input type='text' name='update_person_last_name' id='update_person_last_name' />

    <label for='update_person_address'>Address: </label>
    <input type='text' name='update_person_address' id='update_person_address' />

    <label for='update_person_email'>Email: </label>
    <input type='email' name='update_person_email' id='update_person_email' />

    <label for='update_person_phone_number'>Phone Number: </label>
    <input type='text' name='update_person_phone_number' id='update_person_phone_number' />

    <label for='update_person_fee_total'>Fee Total: </label>
    <input type='number' step='0.01' name='update_person_fee_total' id='update_person_fee_total' />


    <input type='submit' />
</form> 